{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "moduleResolution": "Node",
        "typeRoots": [
            "./node_modules/@types",
            "./node_modules/@figma"
        ],
        "types": [
            "node"
        ],
        "strict": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "exactOptionalPropertyTypes": true,
        "useUnknownInCatchVariables": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "outDir": "./dist"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}

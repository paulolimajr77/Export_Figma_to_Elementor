{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "es6",
            "dom",
            "es2016",
            "dom.iterable"
        ],
        "strict": false,
        "typeRoots": [
            "./node_modules/@types",
            "./node_modules/@figma"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "./dist",
        "skipLibCheck": true,
        "noImplicitAny": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}